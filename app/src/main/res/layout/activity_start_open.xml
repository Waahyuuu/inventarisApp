<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#005BFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">


        <ImageView
            android:id="@+id/appIcon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center"/>

        <!-- TITLE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inventaris App"
            android:textColor="#FFFFFF"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="16dp" />

        <!-- SUBTITLE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Solusi Manajemen Stok Barang"
            android:textColor="#E6FFFFFF"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:layout_marginTop="6dp" />

        <!-- CARD 1 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#33FFFFFF">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#3977EF"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/icon1"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/small_circle"
                    android:padding="10dp"
                    android:src="@drawable/ic_transaction"
                    android:tint="#FFFFFF"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:id="@+id/card_title1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Catat Transaksi"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="12dp"
                    app:layout_constraintStart_toEndOf="@id/icon1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/card_sub1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Kelola barang masuk dan keluar dengan mudah dan cepat"
                    android:textSize="12sp"
                    android:textColor="#DDFFFFFF"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toStartOf="@id/card_title1"
                    app:layout_constraintTop_toBottomOf="@id/card_title1"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- CARD 2 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#33FFFFFF">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#3977EF"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/icon2"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/small_circle"
                    android:padding="10dp"
                    android:src="@drawable/ic_edit"
                    android:tint="#FFFFFF"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:id="@+id/card_title2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Edit &amp; Kelola"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="12dp"
                    app:layout_constraintStart_toEndOf="@id/icon2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/card_sub2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Update informasi barang kapan saja dengan fitur edit lengkap"
                    android:textSize="12sp"
                    android:textColor="#DDFFFFFF"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toStartOf="@id/card_title2"
                    app:layout_constraintTop_toBottomOf="@id/card_title2"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- CARD 3 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#33FFFFFF">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#3977EF"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/icon3"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/small_circle"
                    android:padding="10dp"
                    android:src="@drawable/ic_camera"
                    android:tint="#FFFFFF"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:id="@+id/card_title3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Tambah Gambar"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="12dp"
                    app:layout_constraintStart_toEndOf="@id/icon3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/card_sub3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Dokumentasikan setiap barang dengan foto untuk identifikasi lebih mudah"
                    android:textSize="12sp"
                    android:textColor="#DDFFFFFF"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toStartOf="@id/card_title3"
                    app:layout_constraintTop_toBottomOf="@id/card_title3"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- CARD 4 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#33FFFFFF">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#3977EF"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/icon4"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/small_circle"
                    android:padding="10dp"
                    android:src="@drawable/ic_box"
                    android:tint="#FFFFFF"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:id="@+id/card_title4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Pantau Stok"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="12dp"
                    app:layout_constraintStart_toEndOf="@id/icon4"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/card_sub4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Monitor jumlah stok real-time dan peringatan stok rendah otomatis"
                    android:textSize="12sp"
                    android:textColor="#DDFFFFFF"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toStartOf="@id/card_title4"
                    app:layout_constraintTop_toBottomOf="@id/card_title4"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- BUTTON -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStart"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Mulai Sekarang"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="#0E5BE6"
            android:layout_marginTop="24dp"
            app:cornerRadius="16dp"
            app:backgroundTint="#FFFFFF" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kelola inventaris barang dengan praktis dan efisien"
            android:textColor="#DDFFFFFF"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</ScrollView>