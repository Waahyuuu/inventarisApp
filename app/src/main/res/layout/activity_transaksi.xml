<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#2962FF"
        android:paddingHorizontal="16dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/abc_ic_ab_back_material"
            app:tint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Transaksi Barang"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerLayout"
        android:layout_above="@id/bottomActionLayout"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <FrameLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp">

                        <ImageView
                            android:id="@+id/imgBarangPlaceholder"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:background="#F0F0F0" />

                        <ImageView
                            android:id="@+id/iconPlaceholder"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_launcher_foreground"
                            android:tint="@android:color/darker_gray"
                            android:layout_gravity="center" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tvNamaBarang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nama Barang"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#1F2937"/>
                        <TextView
                            android:id="@+id/tvKategori"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kategori"
                            android:textSize="12sp"
                            android:textColor="#6B7280"/>
                        <TextView
                            android:id="@+id/tvStokTersedia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Stok Tersedia: 0"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"
                            android:textColor="#374151"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis Transaksi"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:textColor="#374151"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/btnMasuk"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_selection_card"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iconMasuk"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/arrow_up_float"
                        app:tint="#4B5563"/>
                    <TextView
                        android:id="@+id/tvMasuk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Barang Masuk"
                        android:layout_marginTop="4dp"
                        android:textColor="#4B5563"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnKeluar"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_selection_card"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iconKeluar"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/arrow_down_float"
                        app:tint="#4B5563"/>
                    <TextView
                        android:id="@+id/tvKeluar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Barang Keluar"
                        android:layout_marginTop="4dp"
                        android:textColor="#4B5563"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jumlah"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp"
                android:textColor="#374151"/>

            <EditText
                android:id="@+id/edtJumlah"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_input_rounded"
                android:paddingHorizontal="16dp"
                android:inputType="number"
                android:hint="0"
                android:text="1"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Catatan"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:textColor="#374151"/>

            <EditText
                android:id="@+id/edtCatatan"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/bg_input_rounded"
                android:padding="16dp"
                android:gravity="top"
                android:hint="Tambahkan catatan transaksi..."
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#F3F4F6"
                android:padding="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Stok Saat Ini:"
                        android:textColor="#4B5563"/>
                    <TextView
                        android:id="@+id/tvStokAwalRingkasan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15"
                        android:textColor="#111827"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvLabelPerubahan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ditambah:"
                        android:textColor="#4B5563"/>
                    <TextView
                        android:id="@+id/tvAngkaPerubahan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+ 1"
                        android:textColor="#059669"
                        android:textStyle="bold"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#D1D5DB"
                    android:layout_marginVertical="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Stok Akhir:"
                        android:textColor="#111827"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tvStokAkhir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="16"
                        android:textColor="#111827"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomActionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="20dp"
        android:background="@color/white"
        android:weightSum="2">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBatal"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Batal"
            android:textAllCaps="false"
            android:background="@drawable/bg_btn_outline"
            android:textColor="#374151"
            android:textStyle="bold"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSimpanTransaksi"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Simpan Transaksi"
            android:textAllCaps="false"
            android:background="@drawable/bg_input_rounded"
            android:backgroundTint="#059669"
            android:textColor="@color/white"
            android:textStyle="bold"/>
    </LinearLayout>

</RelativeLayout>